# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/marvel_card_vault
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=marvel_card_vault

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Optional: Stripe Configuration (for subscription payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_PRICE_ID=price_your_subscription_price_id

# eBay API Configuration
EBAY_APP_ID=your_ebay_app_id
EBAY_APP_ID_PROD=your_ebay_production_app_id
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret
EBAY_DEV_ID=your_ebay_dev_id
EBAY_DEV_ID_PROD=your_ebay_production_dev_id
EBAY_CERT_ID=your_ebay_cert_id
EBAY_CERT_ID_PROD=your_ebay_production_cert_id
EBAY_VERIFICATION_TOKEN=your_ebay_verification_token
EBAY_VERIFICATION_TOKEN_PROD=your_ebay_production_verification_token

# eBay API Rate Limiting (milliseconds between requests)
EBAY_RATE_LIMIT_MS=1000

# Cloudinary Configuration (for image hosting)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Development
NODE_ENV=development